{
    "manifest_version": 3,
    "name": "GAS4U",
    "version": "1.0.0",
    "description": "Google Apps Script Development Assistant with AI",
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "permissions": [
        "storage",
        "identity"
    ]
}